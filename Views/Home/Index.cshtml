@{
    ViewData["Title"] = "Home Page";
}


<body id="fondo_fondo">
    <section id="Box">
        <form action='@Url.Action("Login")' method="post" id="form_login">
            <div class="form-config">
                <div class="header">
                    <h3 class="titulo_login">¡Te damos la bienvenida a Hiring!</h3>
                    <img src="../img/logos/HirINg-app.gif" alt="Logo" class="logo_hiring">
                </div>
                <div class="input-container">
                    <i class="fas fa-envelope"></i>
                    <label for="email">Email</label>
                    <input type="email" name="Mail" id="email" placeholder="Mail" value="sarah_maqui@gmail.com" required />
                    <span id="emailError" class="error"> 
                        @if (ViewBag.MensajeError != null)
                        {
                            @ViewBag.MensajeError
                        }</span>
                </div>

                <div class="input-container">
                    <i class="fas fa-lock"></i>
                    <label for="password">Contraseña</label>
                    <div class="password-container">
                        <input type="password" name="Contraseña" id="password" placeholder="Contraseña" value="123645" required />
                        <span id="toggle-password" class="password-toggle">
                            <p class="mostrar_login"> Mostrar </p>
                        </span>     
                    </div>
                    <p class="forgot-password">
                        <a href='@Url.Action("OlvideContrasena")' onclick="toggleForm();">¿Olvidaste la contraseña?</a>
                    </p>
                </div>

                <button id="butttt">Inicia sesión</button>
               <div id="sign-up-box">
                  <p class="cuenta">¿No tienes cuenta? <a href='@Url.Action("Registro")' onclick="toggleForm();" class="sign-up-link">Regístrate aquí</a></p>
                </div>
            </div>
        </form>
    </section>

    
</body>


 
<script>
    document.getElementById('toggle-password').addEventListener('click', function () {
    const passwordField = document.getElementById('password');
    const passwordToggle = document.getElementById('toggle-password').querySelector('i');

    if (passwordField.type === 'password') {
        passwordField.type = 'text';
        passwordToggle.classList.remove('fa-eye');
        passwordToggle.classList.add('fa-eye-slash');
    } else {
        passwordField.type = 'password';
        passwordToggle.classList.remove('fa-eye-slash');
        passwordToggle.classList.add('fa-eye');
    }
});


</script>